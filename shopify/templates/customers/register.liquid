<div class="text-middle" data-component="register">
  <section class="form fill-width text-center small-only-padding-medium padding-large">
    {% form 'create_customer' %}
      <h2 class="head-3 text--black small-only-padding-top-small padding-top-xxlarge">Create An Account</h2>

      {% if form.posted_successfully? %}
      {% else %}
        <div data-prop="errors" class="margin-vert-large border border-all border-red text--red text-4">
          {{ form.errors | default_errors }}
        </div>
      {% endif %}

      <fieldset class="small-centered small-1-1 medium-1-3 large-1-4 margin-top-large margin-bottom-medium">
        <input type="text" name="customer[first_name]" placeholder="First Name" class="fill-width text-center">
      </fieldset>

      <fieldset class="small-centered small-1-1 medium-1-3 large-1-4 margin-bottom-medium">
        <input type="text" name="customer[last_name]"  placeholder="Last Name" class="fill-width text-center">
      </fieldset>

      <fieldset class="small-centered small-1-1 medium-1-3 large-1-4 margin-bottom-medium">
        <input type="email" name="customer[email]" placeholder="Email Address" class="fill-width text-center">
      </fieldset>

      <fieldset class="small-centered small-1-1 medium-1-3 large-1-4 margin-bottom-medium">
        <input type="password" name="customer[password]"  placeholder="Password" class="fill-width text-center">
      </fieldset>

      <fieldset class="small-centered padding-large small-1-1 medium-1-6 large-1-8 margin-vert-large">
        <input type="submit" value="Create" class="btn-black btn--medium fill-width">
        <a href="/account/login" class="block margin-top-medium text--gray text-4 has-decoration">or Nevermind</a>
      </div>

    {% endform %}
  </section>
</div>
